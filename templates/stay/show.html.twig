{% extends 'base.html.twig' %}

{% block title %}Stay{% endblock %}

{% block body %}
<div class="content" style="display: flex;align-items: center; border: 30px solid orange
;justify-content: center;">
    

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stay.id }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ stay.capacity }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ stay.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ stay.photo }}</td>
            </tr>
            <tr>
                <th>Startdateav</th>
                <td>{{ stay.startdateav ? stay.startdateav|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Enddateav</th>
                <td>{{ stay.enddateav ? stay.enddateav|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stay_index') }}" class="btn btn-primary"style="margin:5px;" >back 
     <img src="/front/images/return.png" alt="Image"
  class="maskImg"</a>

    <a href="{{ path('app_stay_edit', {'id': stay.id}) }}" class="btn btn-info" style="margin:5px;">edit
     <img src="/front/images/edit.png" alt="Image"
  class="maskImg"
    </a>
 
    {{ include('stay/_delete_form.html.twig') }}
    </div>
{% endblock %}
