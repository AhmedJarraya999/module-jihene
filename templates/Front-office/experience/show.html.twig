{% extends 'base-front.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
<div class="site-section">
<div class="container">
<div class="row">
<div class="col-md-50 blog-content">
    <div class="col-md-50 blog-content">
        <h3 > {{ experience.title }} </h3>
        <p > {{ experience.content }}</p>

    <div class="pt-5">
        <p> 
        <a style="color:#f2c05f"> Author:</a> {{ experience.idAuthor }} 
        <a style="color:#f2c05f">Likes:</a> {{ experience.likes }}
        <a style="color:#f2c05f">Date:</a> {{ experience.date }}</p>
    </div>
    
    {{ include('Front-office/experience/_delete_form.html.twig') }}
        <a class="btn" href="{{ path('app_experience_edit_front', {'id': experience.id}) }}">edit</a>

         <br>
        <br>


        {#TO SHOW COMMENT FORM#}
        {{ include('Front-office/comment/new.html.twig') }}



    <br>
    {% for comment in comments %}
        <tr>
        <br>
            <h3>{{ comment.author }}</h3>
            <p>{{ comment.content }}</p>
            <br>

                <font color="gray">
                    <font color="#ff7f50"> Date :  </font>
                    {{ comment.date }}
                    <font color="#ff7f50"> Likes :  </font>
                    {{ comment.likes }}
                </font>

            <br>
    {% endfor %}

    <br>
    <a href="{{ path('app_experience_index_front') }}">back to list </a>
    </div>
      </div>
        </div>
          </div>
            </div>
    
